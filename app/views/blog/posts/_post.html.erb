<!--ovaj fajl poziva index.html.erb da prikaze jedan post-->
<div class="col-sm-6 col-lg-4">
  <div class="card">
  	<div class="card-topper" style="background-image: url(<%= post.banner_image_url %>);"></div>
  	<div class="card-block">
  	  <h4 class="card-title"><%= link_to post.title, post %></h4>
  	  <p class="published-data"><%= post.display_day_published %></p>
  	  <p class="card-text"><%= truncate(post.description, length: 130) %></p>
  	  <%= link_to 'Read', post, class: 'btn btn-read' %> <!--link ka show.html.erb-->	
  	</div>
  </div>	
</div>